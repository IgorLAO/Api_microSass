{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": [ "esnext", "DOM" ],
		"declaration": false,
		"allowJs": true,
		"outDir": "./__BUILD__",
		"rootDir": "./src",
        "skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"removeComments": true,
		"types": [ "node", "golang-wasm-exec" ],
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"++/*": [ "./src/*" ]
		}
    },
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./templates/**/*",
	]
}