{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"lib": ["esnext"],
		"declaration": false,
		"allowJs": true,
		"outDir": "./__BUILD__",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"types": [ "node", "pwi-plata-type" ],
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@@/*": [ "./*" ]
		}
    },
	"include": [
		"./**/*"
	]
}